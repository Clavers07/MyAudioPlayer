<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainMenu"
    android:background="@drawable/home">

  <LinearLayout
      android:background="#85FFFFFF"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="30dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:orientation="vertical"
      tools:layout_editor_absoluteX="1dp"
      tools:layout_editor_absoluteY="1dp">

    <LinearLayout style="@style/layot">
      <TextView style="@style/title"
          android:text="Kun Anta"/>
      <Button android:id="@+id/song0"
          style="@style/playBtn"/>
    </LinearLayout>
    <View style="@style/hr"/>

    <LinearLayout style="@style/layot">
      <TextView style="@style/title"
          android:text="Joji - Dancing in the dark"/>
      <Button android:id="@+id/song1"
          style="@style/playBtn"/>
    </LinearLayout>
    <View style="@style/hr"/>

    <LinearLayout style="@style/layot">
      <TextView style="@style/title"
          android:text="Zayn - Dusk Till Dawn"/>
      <Button android:id="@+id/song2"
          style="@style/playBtn"/>
    </LinearLayout>
    <View style="@style/hr"/>

    <LinearLayout style="@style/layot">
      <TextView style="@style/title"
          android:text="Muffin Song"/>
      <Button android:id="@+id/song3"
          style="@style/playBtn"/>
    </LinearLayout>
    <View style="@style/hr"/>

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>